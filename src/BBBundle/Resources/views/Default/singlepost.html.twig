{% extends '@BB/n2.html.twig' %}
{% block n3 %}


        <div class="row single_header">
            <div class="col-xs-1"></div>

            <div class="col-xs-8">

            </div>
            <div class="col-xs-1"></div>
        </div>
        <div class="row dessin">
           {#<div class="col-xs-2"></div>#}
            <div class="col-xs-12 col-lg-12">
                {%for sg in draw.picture%}
                <img class="img-thumbnail single_post" src="/{{sg.dPath}}" alt="dessin">
                {% endfor %}
            </div>
            {#<div class="col-xs-2"></div>#}
        </div>
    <div class="row">
        <div class="col-xs-6 col-lg-offset-3 nav_comm">
            <span>Vos commentaires</span>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-3"></div>
        <div class="col-xs-6 form_bg">

            {% if comments is empty %}
                <div class="row">
                    <div class="col-xs-12">
                        <div class="jumbotron">
                            <p>Aucun commentaire pour le moment...</p>
                        </div>
                    </div>
                </div>
            {% endif %}



            {% for comment in comments %}
            <div class="row">
                <div class="col-xs-12 head_com">
                    {#<div class="">#}
                        <span>{{ comment.pseudo | upper }}</span>
                        <span>{{ comment.createdAt | date('d/m/Y H:i') }}</span>
                    {#</div>#}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-1"></div>
                <div class="col-xs-10">
                    <div class="jumbotron ">
                        <div>
                            <p>{{ comment.message }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-1"></div>
            </div>
             {% endfor %}
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <hr>
                </div>
            </div>


        </div>
        <div class="col-xs-3"></div>
    </div>






        <div class="row">

        <div class="col-xs-3"></div>
            <div class="col-xs-6 form_bg">
                <h2>Laissez un commentaire !</h2>
                <br>
                {{ form_start(form_com) }}
                {{ form_widget(form_com) }}
                {{ form_end(form_com) }}

            </div>
    <div class="col-xs-3"></div>
        </div>
        <div class="row">
            <div class="col-xs-1"></div>

            <div class="col-xs-8">

            </div>
            <div class="col-xs-1"></div>
        </div>


{% endblock n3 %}